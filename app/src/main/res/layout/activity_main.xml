<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.user.musicapp.MainActivity">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/my_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                android:elevation="10dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home"
                        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                        android:layout_marginTop="15dp"/>

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/banky"
                        android:layout_weight="1"
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:clipChildren="false"
                        android:clipToPadding="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0.0px"
                        app:cardCornerRadius="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        tools:cardElevation="10dp"
                        tools:cardPreventCornerOverlap="false">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/banky_imageView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/bankyw"
                                android:scaleType="centerCrop" />

                            <ImageButton
                                android:id="@+id/image_button1"
                                android:padding="5dp"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/round_button"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_play_arrow_black_24dp"
                                android:backgroundTint="@color/light"
                                android:layout_centerInParent="true"
                                android:layout_marginBottom="5dp" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_weight="1"
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:clipChildren="false"
                        android:clipToPadding="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0.0px"
                        app:cardCornerRadius="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        tools:cardElevation="10dp"
                        tools:cardPreventCornerOverlap="false">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/wizzy"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/wizkid" />

                            <ImageButton
                                android:id="@+id/image_button2"
                                android:padding="5dp"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/round_button"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_play_arrow_black_24dp"
                                android:backgroundTint="@color/light"
                                android:layout_centerInParent="true"
                                android:layout_marginBottom="5dp" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_weight="1"
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:clipChildren="false"
                        android:clipToPadding="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0.0px"
                        app:cardCornerRadius="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        tools:cardElevation="10dp"
                        tools:cardPreventCornerOverlap="false">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/tiwa"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/tiwa"
                                android:scaleType="centerCrop" />

                            <ImageButton
                                android:id="@+id/image_button3"
                                android:padding="5dp"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/round_button"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_play_arrow_black_24dp"
                                android:backgroundTint="@color/light"
                                android:layout_centerInParent="true"
                                android:layout_marginBottom="5dp" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_weight="1"
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        android:clipChildren="false"
                        android:clipToPadding="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0.0px"
                        app:cardCornerRadius="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        tools:cardElevation="10dp"
                        tools:cardPreventCornerOverlap="false">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/oma"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/omawunmi"
                                android:scaleType="centerCrop" />

                            <ImageButton
                                android:id="@+id/image_button4"
                                android:padding="5dp"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/round_button"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_play_arrow_black_24dp"
                                android:backgroundTint="@color/light"
                                android:layout_centerInParent="true"
                                android:layout_marginBottom="5dp" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/popular_album"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <HorizontalScrollView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_weight="1"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:clipChildren="false"
                        android:clipToPadding="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0.0px"
                        app:cardCornerRadius="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        tools:cardElevation="10dp"
                        tools:cardPreventCornerOverlap="false">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/falz"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/falzz" />

                            <ImageButton
                                android:id="@+id/image_button5"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/round_button"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_play_arrow_black_24dp"
                                android:backgroundTint="@color/light"
                                android:layout_centerInParent="true"
                                android:layout_marginBottom="5dp" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_weight="1"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:clipChildren="false"
                        android:clipToPadding="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0.0px"
                        app:cardCornerRadius="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        tools:cardElevation="10dp"
                        tools:cardPreventCornerOverlap="false">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/emma"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/emma" />

                            <ImageButton
                                android:id="@+id/image_button6"
                                android:padding="5dp"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/round_button"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_play_arrow_black_24dp"
                                android:backgroundTint="@color/light"
                                android:layout_centerInParent="true"
                                android:layout_marginBottom="5dp" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_weight="1"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:clipChildren="false"
                        android:clipToPadding="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="0.0px"
                        app:cardCornerRadius="5dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        tools:cardElevation="10dp"
                        tools:cardPreventCornerOverlap="false">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/dija"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/dija"
                                android:scaleType="centerCrop" />

                            <ImageButton
                                android:id="@+id/image_button7"
                                android:padding="5dp"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/round_button"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_play_arrow_black_24dp"
                                android:backgroundTint="@color/light"
                                android:layout_centerInParent="true"
                                android:layout_marginBottom="5dp" />

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_view"
        app:headerLayout="@layout/nav_header" />

</android.support.v4.widget.DrawerLayout>